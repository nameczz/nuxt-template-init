no-wrap()
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;

// 扩展点击区域
extend-click()
  position: relative;

  &:before
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;

// 垂直居中
transform-vertical($position)
  position: $position;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);